{
    "extends": "@acme/tsconfig/nextjs.json",
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@api/*": ["../api/src/*"]
        },
        "strict": false,
        "noImplicitAny": false
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "../../types",
        "next-env.d.ts",
        "next.config.mjs",
        "tailwind.config.ts",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules", ".next"]
}

